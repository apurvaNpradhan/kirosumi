{
	"name": "@kirosumi/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"default": "./src/schema/index.ts"
		},
		"./repository/*": {
			"types": "./dist/repository/*.d.ts",
			"default": "./src/repository/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"devDependencies": {
		"@kirosumi/config": "workspace:*",
		"@types/ws": "^8.18.1",
		"drizzle-kit": "^0.31.2",
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.1",
		"dotenv": "catalog:",
		"drizzle-orm": "^0.44.2",
		"drizzle-zod": "^0.8.3",
		"ws": "^8.18.3",
		"zod": "catalog:"
	}
}
